@using RecSystem.ViewModels
@model RecommendFilmsViewModel

@{
    ViewData["Title"] = "Recommendations";
}
<link href="~/css/MainPage.css" rel="stylesheet" type="text/css" />

<div class="content">

    @if (Model.IsVisibleTable)
    {
        @foreach (var m in Model.RecommendFilmList)
        {
            <div class="movie_container">
                <div class="movie_image">
                    <a asp-controller="Film" asp-action="Details" asp-route-id="@m.ID">
                        <img src="~/images/The_Neon_Demon.jpg" alt="movie_img" width="130" height="180">
                    </a>
                </div>
                <div class="movie_info">
                    <div class="movie_header">
                        <h2>
                            <a asp-controller="Film" asp-action="Details" asp-route-id="@m.ID">@m.MovieTitle</a>
                        </h2>
                    </div>
                    <div class="movie_extra_info">
                        @if (@m.ReleaseDate != null)
                        {
                            <p>
                                Release date: @m.ReleaseDate.Value.ToString("dd.MM.yyyy") <br>
                            </p>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h3>@Model.MessageUser</h3>
    }
</div>