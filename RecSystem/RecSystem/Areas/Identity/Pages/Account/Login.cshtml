@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<link href="~/css/log.css" rel="stylesheet" type="text/css" />

<div class="account_wrapper">

    <div class="log_content">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <form method="post">
            <div class="input_container">
                <div class="label"><label asp-for="Input.Email"></label></div>
                <input asp-for="Input.Email" />
            </div>
            <span asp-validation-for="Input.Email"></span>
            <div class="input_container">
                <div class="label"> <label asp-for="Input.Password"></label> </div>
                <input asp-for="Input.Password" />
            </div>
            <span asp-validation-for="Input.Password"></span>
            <div>
                <div class="checkbox_container">
                    <label asp-for="Input.RememberMe">
                        <input class="checkbox" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="button_container"> <button type="submit">Log in</button> </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}