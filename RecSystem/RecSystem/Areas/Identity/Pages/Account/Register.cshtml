@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<link href="~/css/log.css" rel="stylesheet" type="text/css" />

<div class="account_wrapper">
    <div class="log_content">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <form method="post">
            <div class="input_container">
                <div class="label"> <label asp-for="Input.Name"></label> </div>
                <input asp-for="Input.Name" />
            </div>
            <span asp-validation-for="Input.Name"></span>
            <div class="input_container">
                <div class="label"><label asp-for="Input.Email"></label></div>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="input_container">
                <div class="label"> <label asp-for="Input.Password"></label> </div>
                <input asp-for="Input.Password" />
            </div>
            <span asp-validation-for="Input.Password"></span>
            <div class="input_container">
                <div class="label"><label asp-for="Input.ConfirmPassword"></label></div>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword"></span>
            <div class="button_container"> <button type="submit">register</button> </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}